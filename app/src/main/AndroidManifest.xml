<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.library">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".descreptionActivity"
            android:parentActivityName=".showBooks"
            android:theme="@style/Theme2"></activity>
        <activity
            android:name=".optionActivity"
            android:label="Options"
            android:parentActivityName=".showBooks"
            android:theme="@style/Theme2" />
        <activity
            android:name=".UpdateActivity"
            android:parentActivityName=".showBooks"
            android:theme="@style/Theme2" />
        <activity
            android:name=".showBooks"
            android:label="show books"
            android:parentActivityName=".welcome"
            android:theme="@style/Theme2" />
        <activity
            android:name=".add_book"
            android:label="Add Book"
            android:parentActivityName=".welcome"
            android:theme="@style/Theme2" />

        <activity android:name=".welcome"
            android:theme="@style/AppTheme"/>

        <activity android:name=".Register"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>