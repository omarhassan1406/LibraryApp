<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_book">

    <EditText
        android:id="@+id/title_input"
        android:textColorHint="#5A5A5A"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorAccent2"
        android:ems="10"
        android:hint="Book Title"
        android:inputType="textPersonName" />

    <EditText
        android:hint="Author Name"
        android:textColorHint="#5A5A5A"
        android:textColor="#000"
        android:id="@+id/Author_input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/title_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/colorAccent2"/>

    <EditText
        android:hint="Number Of Pages"
        android:textColorHint="#5A5A5A"
        android:textColor="#000"
        android:id="@+id/pages_input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/Author_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="number"
        android:background="@color/colorAccent2"/>

    <EditText
        android:hint="Description of the Book"
        android:textColorHint="#5A5A5A"
        android:textColor="#000"
        android:id="@+id/description_input"
        android:layout_width="277dp"
        android:layout_height="152dp"
        android:layout_below="@+id/pages_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/colorAccent2"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:text="Add"
        android:textSize="20sp"
        android:textStyle="bold"

        style="@style/buttonStyle"
        android:background="@drawable/button" />
</RelativeLayout>